<div class="genre-detail-container">
  <h2>Genre Details</h2>
  <div class="genre-detail">
      <h3><%= genreDetails[0].name %></h3>      
      <p><strong>Id:</strong><%= genreDetails[0].id %></p>
      <img src="<%= genreDetails[0].image %>" alt="<%= genreDetails[0].name %>" class="genre-detail-image"> <!-- Assuming there's an image for the genre -->
      
      <h4>Games in this Genre:</h4>
      <div class="games-list">
          <% if (genreDetails[0].game_title) { %> 
              <ul>
                  <% genreDetails.forEach(genre => { %>
                      <% if (genre.game_title) { %>
                          <li>
                              <img src="<%= genre.game_image %>" alt="<%= genre.game_title %>" class="game-image">
                              <a href="/games/<%= genre.game_id %>"><%= genre.game_title %></a>
                          </li>
                      <% } %>
                  <% }); %>
              </ul>
          <% } else { %>
              <p>No games available in this genre.</p>
          <% } %>
      </div>
  </div>

  <a href="/genres">Back to Genres</a>
  <a href="/genres/form?action=edit&id=<%= genreDetails[0].id %>">Edit Genre</a>
  <form action="/genres/<%= genreDetails[0].id %>?_method=DELETE" method="POST">
    <button type="submit">Delete Genre</button>
  </form>
</div>
