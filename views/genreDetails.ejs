

<div class="details-container">
    <h2>Genre Details</h2>
    <div class="details-section">
        <h3><%= genreDetails[0].name %></h3>
        <img src="<%= genreDetails[0].image %>" alt="<%= genreDetails[0].name %>" class="details-image">
        <p><strong>Id:</strong> <%= genreDetails[0].id %></p>
        
        <h4>Games in this Genre:</h4>
        <div class="games-list">
            <% if (genreDetails[0].game_title) { %>
                <ul>
                    <% genreDetails.forEach(genre => { %>
                        <% if (genre.game_title) { %>
                            <li class="game-container">
                                <a class="image-wrapper" href="/games/<%= genre.game_id %>">
                                    <img src="<%= genre.game_image %>" alt="<%= genre.game_title %>" class="game-image">
                                </a>
                                <a href="/games/<%= genre.game_id %>"><%= genre.game_title %></a>
                            <li>
                        <% } %>
                    <% }); %>
                </ul>
            <% } else { %>
                <p>No games available in this genre.</p>
            <% } %>
        </div>
    </div>

    <div class="details-links">
        <a href="/genres" class="back-link">Back to Genres</a>
        <a href="/genres/form?action=edit&id=<%= genreDetails[0].id %>" class="edit-link">Edit Genre</a>
        <form action="/genres/<%= genreDetails[0].id %>?_method=DELETE" method="POST">
          <button type="submit" class="delete-button">Delete Genre</button>
        </form>
    </div>
</div>
  
