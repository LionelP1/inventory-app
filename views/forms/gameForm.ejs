<form action="/games/form<%= game ? `?action=edit&id=${game.id}` : '?action=add' %>" method="POST" class="form">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" value="<%= game ? game.title : '' %>" required>
  
    <label for="release_date">Release Date:</label>
    <input type="date" id="release_date" name="release_date" value="<%= game && game.release_date ? new Date(game.release_date).toISOString().split('T')[0] : '' %>" required>
  
    <label for="publisher_id">Publisher Id:</label>
    <input type="number" id="publisher_id" name="publisher_id" value="<%= game ? game.publisher_id : '' %>" required>
  
    <label for="genre_id">Genre Id:</label>
    <input type="number" id="genre_id" name="genre_id" value="<%= game ? game.genre_id : '' %>" required>
  
    <label for="image">Image URL:</label>
    <input type="url" id="image" name="image" value="<%= game ? game.image : '' %>" required>
  
    <button type="submit"><%= game ? 'Update Game' : 'Add Game' %></button>
</form>
  