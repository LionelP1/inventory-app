<form action="/publishers/form<%= publisher ? `?action=edit&id=${publisher.id}` : '?action=add' %>" method="POST" class="form">
    <label for="name">Publisher Name:</label>
    <input type="text" id="name" name="name" value="<%= publisher ? publisher.name : '' %>" required>
  
    <label for="image">Image URL:</label>
    <input type="url" id="image" name="image" value="<%= publisher ? publisher.image : '' %>" required>
  
    <button type="submit"><%= publisher ? 'Update Publisher' : 'Add Publisher' %></button>
</form>
  