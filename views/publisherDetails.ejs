<div class="details-container">
    <h2>Publisher Details</h2>
    <div class="details-section">
        <h3><%= publisherDetails[0].name %></h3>
        <p><strong>Id:</strong> <%= publisherDetails[0].id %></p>
        <img src="<%= publisherDetails[0].image %>" alt="<%= publisherDetails[0].name %>" class="details-image">
        
        <h4>Games Published:</h4>
        <div class="games-list">
            <% if (publisherDetails[0].game_title) { %>
                <ul>
                    <% publisherDetails.forEach(publisher => { %>
                        <% if (publisher.game_title) { %>
                            <li class="game-container">
                                <a class="image-wrapper" href="/games/<%= publisher.game_id %>">
                                    <img src="<%= publisher.game_image %>" alt="<%= publisher.game_title %>" class="game-image">
                                </a>
                                <a href="/games/<%= publisher.game_id %>"><%= publisher.game_title %></a>
                            </li>
                        <% } %>
                    <% }); %>
                </ul>
            <% } else { %>
                <p>No games published by this publisher.</p>
            <% } %>
        </div>
    </div>
  
    <div class="details-links">
        <a href="/publishers" class="back-link">Back to Publishers</a>
        <a href="/publishers/form?action=edit&id=<%= publisherDetails[0].id %>" class="edit-link">Edit Publisher</a>
        <form action="/publishers/<%= publisherDetails[0].id %>?_method=DELETE" method="POST">
            <button type="submit" class="delete-button">Delete Publisher</button>
        </form>
    </div>
</div>





